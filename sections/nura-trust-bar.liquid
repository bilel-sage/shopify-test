{{ 'nura-custom.css' | asset_url | stylesheet_tag }}

<style>
  .nura-trust-bar {
    padding: 40px 24px;
    border-top: 1px solid var(--nura-gold);
    border-bottom: 1px solid var(--nura-gold);
    background: var(--nura-blanc);
  }

  .nura-trust-bar__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .nura-trust-bar__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    padding: 16px 8px;
  }

  .nura-trust-bar__icon {
    font-size: 1.6rem;
    color: var(--nura-gold);
    line-height: 1;
  }

  .nura-trust-bar__text {
    font-family: var(--nura-font-body);
    font-size: 0.7rem;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--nura-noir);
    opacity: 0.85;
  }

  @media (max-width: 768px) {
    .nura-trust-bar__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }

    .nura-trust-bar {
      padding: 32px 16px;
    }
  }

  @media (max-width: 390px) {
    .nura-trust-bar__grid {
      grid-template-columns: 1fr;
      gap: 12px;
    }

    .nura-trust-bar__item {
      flex-direction: row;
      justify-content: center;
      gap: 16px;
      padding: 10px 8px;
    }
  }
</style>

<section class="nura-trust-bar">
  <div class="nura-trust-bar__grid">
    {%- for block in section.blocks -%}
      <div class="nura-trust-bar__item" {{ block.shopify_attributes }}>
        <span class="nura-trust-bar__icon">{{ block.settings.icon }}</span>
        <span class="nura-trust-bar__text">{{ block.settings.text }}</span>
      </div>
    {%- endfor -%}
  </div>
</section>

{% schema %}
